extends HBoxContainer

################################################################################
# Signals
################################################################################

signal selected_unit(i)

################################################################################
# Variables
################################################################################

onready var button_group: ButtonGroup = ButtonGroup.new()

################################################################################
# Interface
################################################################################


func reset_buttons():
    for button in get_children():
        button.pressed = false
        button.disabled = false


################################################################################
# Event Handlers
################################################################################

func _ready():
    for button in get_children():
        button.pressed = false
        button.disabled = false
        button.group = button_group
